h1 {
 	background-color: #ccccff;
	text-align: center;	
}
p {
	text-align: center;
}

.product {
	width: 200px;
	height: 200px;
}
#mainmenu {
	color: green;
}
#nav {
	background-color: black;
}
	
#site-name {
	padding: 0px;
	color: green;
	border-right: solid;
	border-color: black;

	font-family: 'Brush Script MT', cursive;
}
#search-bar {
	color: blue;
}

a {
	position: center;	
	text-align: center;
}
.button {
	width: 95%;
  	text-decoration: none;
  	color: rgba(255, 255, 255, 0.9);
  	background: black;
  	padding: 0.5em;
  	border-radius: 4px;
  	font-weight: bold;
 	text-transform: uppercase;
 	transition: all 0.2s ease-in-out;
  	margin:3px 5px 3px 5px;
	border: solid;
	border-color: white;
	border-width: 0.15em;
	cursor: pointer;
}
.glow-button:hover {
  	color: black;
  	background-color: rgba(255, 255, 255, 0.9);

  	box-shadow: 0 5px 15px rgba(192, 192, 192, 0.7);
}
#container {
	margin-left: 8px;
}

.products {
	margin-top: 8px;
}

.search-bar {
	background: #ccccff;
}
.search-bar input[type=text] {
  	padding: 6px;
  	margin-top: 24px;
  	font-size: 20px;
}

.dropdown {
  	position: relative;
  	display: inline-block;
	padding-bottom: 1px;
}

.dropdown-content {
  	display: none;
  	position: absolute;
  	background-color: #f9f9f9;
  	min-width: 95%;
  	box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  	z-index: 1;
}

.dropdown-content a {
	color: black;
	padding: 10px 10px;
	text-decoration: none;
	display: block;
}

.dropdown-content a:hover {
	background-color: #f1f1f1
}

.dropdown:hover .dropdown-content {
	display: block;
}

#product-container
{
	z-index:-1;
	background-color:rgba(180, 180, 180, 0.7);
	display:block; 
	margin:0 auto;
	float:right;
	box-shadow:0 10px 10px rgba(90,90,90,0.5);
	border:1px solid black;
}
#bigPhoto{
		width: 400px;
}
